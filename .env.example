# ===========================================
# NOVACK BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# ----------------- Database -----------------
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=novack

# ----------------- JWT -----------------
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=24h

# ----------------- Application -----------------
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ----------------- Email (Resend) -----------------
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM_SECURITY=security@yourdomain.com

# ----------------- Redis -----------------
REDIS_URL=redis://username:password@host:port
REDIS_USERNAME=default
REDIS_PASSWORD=your_redis_password
REDIS_HOST=localhost
REDIS_PORT=6379

# ----------------- PostgreSQL (Docker) -----------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=novack

# ----------------- ESP32 Cards -----------------
ESP32_AUTH_KEY=esp32_secret_key_change_this

# ----------------- AWS S3 -----------------
AWS_S3_EMPLOYEE_BUCKET_NAME=your-employees-bucket
AWS_S3_SUPPLIER_BUCKET_NAME=your-suppliers-bucket
AWS_S3_VISITOR_BUCKET_NAME=your-visitors-bucket

# ----------------- AWS SNS & General -----------------
SMS_PROVIDER=sns
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ----------------- DeepSeek AI -----------------
DEEPSEEK_API_URL=https://api.deepseek.com
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx

# ----------------- Cookie -----------------
COOKIE_SECRET=your_cookie_secret_change_this

# ----------------- Logging -----------------
LOG_LEVEL=info
LOG_TO_FILE=true
ELK_ENABLED=false
ELK_HOST=http://localhost:9200
APP_NAME=novack-backend
REDIS_ENCRYPTION_KEY=secure_encryption_key_for_redis_data
