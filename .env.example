# ============================================
# CONFIGURACIÓN DEL BACKEND - VARIABLES DE ENTORNO
# ============================================

# --- Base de Datos ---
DATABASE_URL=postgresql://user:password@host:port/database

# --- JWT y Seguridad ---
JWT_SECRET=tu-secret-key-muy-seguro-aqui
JWT_EXPIRES_IN=24h
COOKIE_SECRET=tu-cookie-secret-aqui

# --- CORS (CRÍTICO PARA PRODUCCIÓN) ---
# Dominios permitidos para hacer peticiones al backend
# Separa múltiples dominios con comas (sin espacios)
ALLOWED_ORIGINS=http://localhost:3000,https://novack.vercel.app,https://*.vercel.app

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# --- AWS S3 (para subir archivos) ---
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu-access-key
AWS_SECRET_ACCESS_KEY=tu-secret-key
AWS_S3_BUCKET=tu-bucket-name

# --- Twilio (para SMS) ---
TWILIO_ACCOUNT_SID=tu-account-sid
TWILIO_AUTH_TOKEN=tu-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# --- Resend (para emails) ---
RESEND_API_KEY=re_tu_api_key

# --- Entorno ---
NODE_ENV=development
PORT=4000

# --- Logging ---
SIMPLE_LOGGING=false
